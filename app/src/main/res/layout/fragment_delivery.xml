<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.DeliveryFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:textColor="@android:color/black">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="45dp"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/deliveryLblTitulo"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="@android:color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/pedido1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/txtPedidoNumero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N° Pedido: 0234"
                        android:textColor="@android:color/black"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado: "
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/txtPedidoEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recibido"
                            android:background="@drawable/rounded_button"
                            android:padding="4dp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtClienteNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cliente: Lucho"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/txtPedidoHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora: 12:51 am"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/pedido2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="5dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/txtPedidoNumero2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N° Pedido: 0234"
                        android:textColor="@android:color/black"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado: "
                            android:textColor="@android:color/black" />
                        <TextView
                            android:id="@+id/txtPedidoEstado2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recibido"
                            android:background="@drawable/rounded_button"
                            android:padding="4dp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtClienteNombre2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cliente: Lucho"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/txtPedidoHora2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora: 12:51 am"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>