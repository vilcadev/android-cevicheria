                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:background="#A9A9A9"
                        android:textColor="#FFFFFF"
                        android:padding="4dp"
                        android:text="S/. 12.00" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="chicha de jora" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/incakola" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:background="#A9A9A9"
                        android:padding="4dp"
                        android:text="S/. 10.00"
                        android:textColor="#FFFFFF" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Inca kola" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/coacola" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:background="#A9A9A9"
                        android:textColor="#FFFFFF"
                        android:padding="4dp"
                        android:text="S/. 5.00" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Coca cola" />
            </LinearLayout>
        </TableRow>





    </TableLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/frame_ver_seleccionados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#35f04e"
        android:padding="16dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/texto_seleccionados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Ver Seleccionados"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </FrameLayout>
    </RelativeLayout>
</LinearLayout>